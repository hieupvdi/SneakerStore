@model AppData.ViewModels.CTSanPhamVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thêm Sản Phẩm</h3>

        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "QLSanPham", FormMethod.Post))
            {
                @Html.HiddenFor(p => p.Id)
                <div class="bs-stepper-content">
                    <!-- your steps content here -->
                    <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">

                        <div class="form-group">
                            <label for="exampleInputEmail1">Tên sản phẩm</label>
                            <select class="form-control" name="IdSP">
                                @foreach (var item in ViewBag.SanPhamData)
                                {
                                    <option value="@item.Id">@item.TenSP</option>
                                }
                            </select>

                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Size</label>
                            <select class="form-control" name="IdSize">
                                @foreach (var item in ViewBag.SizeData)
                                {
                                    <option value="@item.Id">@item.SizeNumber</option>
                                }
                            </select>

                        </div>









                        <div class="form-group">
                            <label for="exampleInputEmail1">Nhà Sản Xuất</label>
                            @Html.TextBoxFor(p => p.NhaSanXuat, new { @class = "form-control" })
                            @Html.ValidationMessageFor(Model => Model.NhaSanXuat, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">Trạng Thái</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="TrangThai" id="TrangThai1" value="1" checked>
                                <label class="form-check-label" for="TrangThai1">
                                    còn hoạt động
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="TrangThai" id="TrangThai2" value="2">
                                <label class="form-check-label" for="TrangThai2">
                                    không hoạt động
                                </label>
                            </div>

                        </div>
                        <div class="form-group">
                            <a href="/Admin/QLSanPham/ShowAllQLSP" class="btn btn-primary">Quay Lại</a>
                            <button type="Submit" class="btn btn-danger">Thêm</button>
                        </div>


                    </div>

                </div>

            }

        </div>

        <div class="card-footer">
        </div>

    </div>

</section>