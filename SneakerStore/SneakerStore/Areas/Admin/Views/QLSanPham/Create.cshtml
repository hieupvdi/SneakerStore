@model AppData.ViewModels.CTSanPhamVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<section class="content">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thêm Sản Phẩm</h3>

        </div>




        <div class="card-body">
            @using (Html.BeginForm("Create", "QLSanPham", FormMethod.Post))
            {
                @*@Html.HiddenFor(p => p.Id)*@
                <div class="bs-stepper-content">
                    <!-- your steps content here -->
                    <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">

                        <div class="form-group">
                            <label for="exampleInputEmail1">Tên sản phẩm</label>
                            <select class="form-control" name="IdSP" asp-for="IdSP">
                                @if (ViewBag.SanPhamData != null)
                                {
                                    @foreach (var sp in ViewBag.SanPhamData)
                                    {
                                        <option value="@sp.Id">@sp.TenSP</option>
                                    }

                                }
                            </select>

                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Size</label>
                            <select class="form-control" name="IdSize" asp-for="IdSize">
                                @if (ViewBag.SizeData != null)
                                {
                                    @foreach (var size in ViewBag.SizeData)
                                    {
                                        <option value="@size.Id">@size.SizeNumber</option>
                                    }

                                }
                            </select>

                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Màu</label>
                            <select class="form-control" name="IdMauSac" asp-for="IdMauSac">
                                @if (ViewBag.MauSacData != null)
                                {
                                    @foreach (var size in ViewBag.MauSacData)
                                    {
                                        <option value="@size.Id">@size.TenMauSac</option>
                                    }

                                }
                            </select>

                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Danh Mục</label>
                            <select class="form-control" name="IdDanhMuc" asp-for="IdDanhMuc">
                                @if (ViewBag.DanhMucData != null)
                                {
                                    @foreach (var dm in ViewBag.DanhMucData)
                                    {
                                        <option value="@dm.Id">@dm.Ten</option>
                                    }
                                }
                            </select>

                        </div>


                        <div class="form-group">
                            <label for="exampleInputEmail1">Đế Giày</label>
                            <select class="form-control" name="IdDeGiay" asp-for="IdDeGiay">
                                @if (ViewBag.DeGiayData != null)
                                {
                                    @foreach (var item in ViewBag.DeGiayData)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                }
                            </select>

                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Giảm Gía</label>
                            <select class="form-control" name="IdGiamGia" asp-for="IdGiamGia">
                                @if (ViewBag.GiamGiaData != null)
                                {
                                    @foreach (var item in ViewBag.GiamGiaData)
                                    {
                                        <option value="@item.Id">@item.TenMaGiamGia</option>
                                    }
                                }
                            </select>

                        </div>





                        <div class="form-group">
                            <label for="exampleInputEmail1">Gía Nhập</label>
                            @Html.TextBoxFor(p => p.Gianhap, new { @class = "form-control" })
                            @Html.ValidationMessageFor(Model => Model.Gianhap, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Gía Bán</label>
                            @Html.TextBoxFor(p => p.Giaban, new { @class = "form-control" })
                            @Html.ValidationMessageFor(Model => Model.Giaban, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Chất Liệu</label>
                            @Html.TextBoxFor(p => p.ChatLieu, new { @class = "form-control" })
                            @Html.ValidationMessageFor(Model => Model.ChatLieu, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Số Lượng</label>
                            @Html.TextBoxFor(p => p.SoLuongTon, new { @class = "form-control" })
                            @Html.ValidationMessageFor(Model => Model.SoLuongTon, "", new { @class = "text-danger" })
                        </div>



                        <div class="form-group">
                            <label for="exampleInputEmail1">Nhà Sản Xuất</label>
                            @Html.TextBoxFor(p => p.NhaSanXuat, new { @class = "form-control" })
                            @Html.ValidationMessageFor(Model => Model.NhaSanXuat, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Mô Tả</label>
                            @Html.TextBoxFor(p => p.MoTa, new { @class = "form-control" })
                            @Html.ValidationMessageFor(Model => Model.MoTa, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">Trạng Thái</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="TrangThai" id="TrangThai1" value="1" checked>
                                <label class="form-check-label" for="TrangThai1">
                                    còn hàng
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="TrangThai" id="TrangThai2" value="2">
                                <label class="form-check-label" for="TrangThai2">
                                    Hết hàng
                                </label>
                            </div>

                        </div>
                        <div class="form-group">
                            <a href="/Admin/QLSanPham/ShowAllQLSP" class="btn btn-primary">Quay Lại</a>
                            <button type="Submit" class="btn btn-danger">Thêm</button>
                        </div>


                    </div>

                </div>

            }

        </div>






        <div class="card-footer">
        </div>

    </div>

</section>
































