@model IEnumerable<AppData.ViewModels.VoucherVM>

@{
    ViewData["Title"] = "ShowAllVoucher";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Quản Lý Voucher</h3>
            <div class="d-flex justify-content-end">

                <a href="@Url.Action("Create","Voucher")">
                    <button type="button" class="btn btn-primary">
                        <i class="bi bi-pencil-square"> Thêm</i>
                    </button>
                </a>

            </div>
        </div>
        <div class="card-body">
<table class="table">
    <thead>
        <tr>
           @* <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Ten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DieuKien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoTienGiam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhanTram)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayBatDau)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayKetThuc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoTa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrangThai)
            </th>
                        <th><spam>Thao tác</spam></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
                        @if (item.TrangThai != 0)
                        {
                            <tr>
                              @*  <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ten)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DieuKien)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoTienGiam)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhanTram)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NgayBatDau)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NgayKetThuc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoLuong)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MoTa)
                                </td>
                                <td>
                                    @if (item.TrangThai == 1)
                                    {
                                        <p>Còn hoạt động</p>
                                    }
                                    else
                                    {
                                        <p>Hết hạn</p>
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-primary" href="@Url.Action("Edit","Voucher",new{id=item.Id})">Sửa</a>
                                    <a class="btn btn-warning" href="@Url.Action("Delete","Voucher",new{id=item.Id})">Xóa</a>
                                </td>
                            </tr>
                        }
                    }
    </tbody>
</table>
        </div>


<div class="card-footer">
</div>

    </div>

</section>