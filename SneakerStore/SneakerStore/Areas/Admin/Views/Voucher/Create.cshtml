@model AppData.ViewModels.VoucherVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thêm Voucher</h3>

        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "Voucher", FormMethod.Post))
            {
                @Html.HiddenFor(p => p.Id)
                <div class="bs-stepper-content">
                    <!-- your steps content here -->
                    <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">

                        <div class="form-group">
                            <label for="exampleInputEmail1">Tên Voucher</label>
                            @Html.TextBoxFor(p => p.Ten, new { @class = "form-control" })
                            @Html.ValidationMessageFor(Model => Model.Ten, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Điều Kiện</label>
                            @Html.TextBoxFor(p => p.DieuKien, new { @class = "form-control" })
                            @Html.ValidationMessageFor(Model => Model.DieuKien, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Số Tiền Giảm</label>
                            @Html.TextBoxFor(p => p.SoTienGiam, new { @class = "form-control" })
                            @Html.ValidationMessageFor(Model => Model.SoTienGiam, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Phần Trăm</label>
                            @Html.TextBoxFor(p => p.PhanTram, new { @class = "form-control" })
                            @Html.ValidationMessageFor(Model => Model.PhanTram, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.NgayBatDau, new { @class = "control-label" })
                            @Html.TextBoxFor(p => p.NgayBatDau, new { @type = "datetime-local", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NgayBatDau, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.NgayKetThuc, new { @class = "control-label" })
                            @Html.TextBoxFor(p => p.NgayKetThuc, new { @type = "datetime-local", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NgayKetThuc, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Số Lượng</label>
                            @Html.TextBoxFor(p => p.SoLuong, new { @class = "form-control" })
                            @Html.ValidationMessageFor(Model => Model.SoLuong, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Mô Tả</label>
                            @Html.TextBoxFor(p => p.MoTa, new { @class = "form-control" })
                            @Html.ValidationMessageFor(Model => Model.MoTa, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Trạng Thái</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="TrangThai" id="TrangThai1" value="1" checked>
                                <label class="form-check-label" for="TrangThai1">
                                    còn hoạt động
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="TrangThai" id="TrangThai2" value="2">
                                <label class="form-check-label" for="TrangThai2">
                                    Hết hạn
                                </label>
                            </div>

                        </div>
                        <div class="form-group">
                            <a href="/Admin/Voucher/ShowAllVoucher" class="btn btn-primary">Quay Lại</a>
                            <button type="Submit" class="btn btn-danger">Thêm</button>
                        </div>


                    </div>

                </div>

            }

        </div>

        <div class="card-footer">
        </div>

    </div>

</section>
