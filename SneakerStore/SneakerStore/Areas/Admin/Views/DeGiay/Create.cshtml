@model AppData.ViewModels.DeGiayVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thêm Đế Giày</h3>

        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "DeGiay", FormMethod.Post))
            {
                @Html.HiddenFor(p => p.Id)
                <div class="bs-stepper-content">
                    <!-- your steps content here -->
                    <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">

                        <div class="form-group">
                            <label for="exampleInputEmail1">Tên Đế</label>
                            @Html.TextBoxFor(p => p.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(Model => Model.Name, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">Trạng Thái</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="TrangThai" id="TrangThai1" value="1" checked>
                                <label class="form-check-label" for="TrangThai1">
                                    còn hoạt động
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="TrangThai" id="TrangThai2" value="2">
                                <label class="form-check-label" for="TrangThai2">
                                    không hoạt động
                                </label>
                            </div>

                        </div>
                        <div class="form-group">
                            <a href="/Admin/DeGiay/ShowAllDG" class="btn btn-primary">Quay Lại</a>
                            <button type="Submit" class="btn btn-danger">Thêm</button>
                        </div>


                    </div>

                </div>

            }

        </div>

        <div class="card-footer">
        </div>

    </div>

</section>
