@model IEnumerable<AppData.ViewModels.HoaDonCTVM>

@{
    ViewData["Title"] = "ShowAllHDCT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel="stylesheet" type="text/css" href="~/client/styles/single_styles.css">
<link rel="stylesheet" type="text/css" href="~/client/styles/single_responsive.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<!-- ========================= SECTION CONTENT ========================= -->
<div class="container contact_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->
            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="index.html">Home</a></li>
                    <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Contact</a></li>
                </ul>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->
            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="index.html">Home</a></li>
                    <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Contact</a></li>
                </ul>
            </div>

        </div>
    </div>
    <div class="row">
        <section class="section-content padding-y">
            <div class="container">

                <div class="row">
                    <main class="col-md-12">
                        <div class="card">

                            <table class="table table-borderless table-shopping-cart">
                                <thead class="text-muted">
                                    <tr class="small text-uppercase">
                                        <th scope="col" width="120">Tên Sản Phẩm</th>
                                        <th scope="col" width="120">Ảnh</th>
                                        <th scope="col" width="120">Số Lượng</th>
                                        <th scope="col" width="120">Đơn Gía</th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {


                                        <tr>
                                            <td>
                                                <figure class="itemside">

                                                    @foreach (var sp in ViewBag.CTSanPhamData)
                                                    {
                                                        if (item.IdCTSP == sp.Id && sp.TrangThai != 0)
                                                        {
                                                            <figcaption class="info">
                                                                <a href="#" class="title text-dark">@sp.TenSP</a>

                                                            </figcaption>
                                                        }
                                                    }

                                                </figure>
                                            </td>
                                            <td>
                                                <div class="quantity_selector">

                                                    @foreach (var anh in ViewBag.AnhData)
                                                    {
                                                        if (item.IdCTSP == anh.IdCTSP && anh.TrangThai != 0)
                                                        {
                                                            <div class="aside"><img src="@anh.URlAnh" class="img-sm" style="width: 100px; height: 100px;"></div>
                                                        }
                                                    }

                                                </div>

                                            </td>
                                            <td>
                                                <div class="price-wrap">

                                                    <span id="quantity_value">@item.SoLuong</span>

                                                </div>

                                            </td>

                                            <td>
                                                <div class="price-wrap">
                                                    <span id="quantity_value">@item.DonGia</span>

                                                </div>
                                                <!-- price-wrap .// -->
                                            </td>

                                        </tr>



                                    }
                                </tbody>
                            </table>

                            <div class="card-body border-top">
                               
                                <a href="@Url.Action("ShowAllHD","HoaDon")" class="btn btn-light">Quay Lai</a>
                            </div>
                        </div>
                        <!-- card.// -->

                        <div class="alert alert-success mt-3">
                            <p class="icontext"><i class="icon text-success fa fa-truck"></i> Free Delivery within 1-2 weeks</p>
                        </div>

                    </main>

                </div>

            </div>
            <!-- container .//  -->
        </section>

    </div>
</div>

<script src="~/client/js/single_custom.js"></script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>